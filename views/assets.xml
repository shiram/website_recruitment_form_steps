<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_hr_recruitment_css" name="Recruitment Form Styles" inherit_id="web.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link type="text/css" href="/website_recruitment_form_steps/static/src/css/application_form.css"/>
        </xpath>
    </template>

    <template id="assets_hr_recruitment_js" name="Recruitment Form Scripts" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/website_recruitment_form_steps/static/src/js/application_form.js"></script>
        </xpath>
    </template>
</odoo>
